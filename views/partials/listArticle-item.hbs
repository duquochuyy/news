<a href="/articles/{{id}}" class="list-article__link">
        <div class="list-article__img pos-r">
                <img src="{{mainImg}}" alt="{{title}}">
                {{#each Categories}}
                <div class="category-card pos-a">{{name}}</div>
                {{/each}}
        </div>
        <div class="list-article__infor">
                <p class="list-article__title bold">{{title}}</p>
                <p class="list-article__content">{{abstract}}</p>
                <div class="list-article__extra">
                        {{#with Writer}}
                        <p class="author"><i class="fa-solid fa-pen "></i>
                                {{User.name}}</p>
                        {{/with}}
                        <p class="time"><i class="fa-solid fa-clock"></i>
                                {{publishDateNew}}</p>
                </div>


                <ul id="list-article__tag">
                        {{#each Tags}}
                        <li class="list-tag__item">
                                <a href="/articles?tag={{id}}" class="list-tag__link">
                                        #{{name}}
                                </a>
                        </li>
                        {{/each}}
                </ul>



        </div>

</a>