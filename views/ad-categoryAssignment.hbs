<aside id="sidebar">
    {{#with user}}
    {{> ad-header}}
    {{/with}}

    <div class="line-separate"></div>
    <ul id="sidebar__list">
        <li class="sidebar__item">
            <a href="/admin" class="sidebar__link">Chuyên mục</a>
        </li>
        <li class="sidebar__item"><a href="/admin/tag-management" class="sidebar__link">Nhãn</a></li>
        <li class="sidebar__item "><a href="/admin/article-management" class="sidebar__link">Bài viết</a></li>
        <li class="sidebar__item "><a href="/admin/user-management" class="sidebar__link">Người dùng</a>
        </li>
        <li class="sidebar__item sidebar__item--active"><a href="" class="sidebar__link">Phân công chuyên mục</a>
        </li>
        <li class="sidebar__item"><a href="/admin/account-renewal" class="sidebar__link">Gia hạn tài khoản</a></li>
    </ul>

</aside>
<main id="main">
    <p id="title">Danh sách biên tập viên</p>
    <div class="container-xl">
        <div class="table-responsive">
            <div class="table-wrapper">
                <div class="table-heading">
                    <div class="row">
                        <div class="col-sm-8">
                            <form id="search">
                                <i class="fa-solid fa-magnifying-glass"></i>
                                <input type="text" id="search-field" name="keyword"
                                    placeholder="Tìm kiếm biên tập viên...">
                            </form>
                        </div>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 27%;">Tên</th>
                            <th style="width: 28%;">Email</th>
                            <th style="width: 40%;">Chuyên mục quản lý</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each allEditors}}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    {{#if User.sex}}
                                    <a href=""><img src="/images/users/man_default.png" class="user-avatar"
                                            alt="Avatar">
                                    </a>
                                    {{else}}
                                    <a href=""><img src="/images/users/female_default.png" class="user-avatar"
                                            alt="Avatar">
                                    </a>
                                    {{/if}}
                                    <div class="user-name">
                                        <span class="user-fullname text-capitalize">{{User.name}}</span>
                                        <span class="user-nickname">{{User.username}}</span>
                                    </div>
                                </div>
                            </td>
                            <td>{{User.email}}</td>
                            <td class="role">{{category}}</td>
                            <td>
                                <div class="d-flex table-control">
                                    <a href="" class="edit" id="button-edit" data-bs-toggle="modal"
                                        data-bs-target="#editModal" onclick="setDataModal({{id}})">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <div class="clearfix">
                    <nav arie-label="Page navigation example" id="pagination">
                        {{{createPagination pagination paginationClass="" leftText="<" rightText=">" }}} </nav>
                </div>
            </div>
        </div>

        <p style="display: none;" id="idEditor"></p>
    </div>

</main>

<!-- Edit Modal HTML -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="edit-modal-label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <i class="fa-solid fa-xmark close-modal" aria-hidden="true"></i>
                </button>
                <h5 class="modal-title mt-3" id="edit-modal-label">Chỉnh sửa chuyên mục quản lý</h5>
                <form class="mt-3" id="change-category" action="">

                    <ul class="row mb-3 d-flex flex-column justify-content-around">
                        <li class="mb-3 d-flex flex-column" id="selectCategory">
                        </li>
                    </ul>

                    <div class="myModal-button">
                        <input type="button" class="button success-btn" value="Cập nhật"
                            onclick="updateCateAssign(document.getElementById('multipleSelect').value)">
                        <input type="button" class="button cancel-btn" data-bs-dismiss="modal" value="Hủy bỏ">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

