<ul id="breadcrumb">
        <li class="breadcrumb__item">
                <a href="/" class="breadcrumb__link hover">Trang chủ

                </a>
        </li>
        <li class="breadcrumb__item"> ›› <a href="#" class="breadcrumb__link  breadcrumb__link--active hover">Duyệt bài
                        viết</a>
        </li>
</ul>
<main id="app__body">
        <div class="container-fluid mb-5">

                {{#with article}}
                <div class="col-lg-12">
                        <h1 class="mt-4 fw-bold">{{title}}</h1>
                </div>
                {{/with}}

                <div class="row m-0">
                        <hr class="col-lg-3 p-0">
                </div>

                <div class="row">
                        <div class="sidebar col-lg-3">
                                <ul class="nav navbar-nav">
                                        <li class="nav-item active rounded mb-1 content-1">
                                                <a class="nav-link text-black hover px-4" href="#"
                                                        aria-current="page">Nội dung chi tiết<span
                                                                class="visually-hidden">(current)</span></a>
                                        </li>
                                        <li class="nav-item rounded mb-1 content-2">
                                                <a class="nav-link text-black hover px-4" href="#">Chuyên mục</a>
                                        </li>
                                        <li class="nav-item rounded mb-1 content-3">
                                                <a class="nav-link text-black hover px-4" href="#">Thẻ</a>
                                        </li>
                                </ul>
                        </div>

                        <div class="content col-lg-9 ">
                                {{#with article}}
                                <div class="content-1 content-active">
                                        <div class="border rounded p-3 text-justify about">
                                                <p>{{abstract}}</p>
                                                <img src="{{mainImg}}" alt="" class="col-12 rounded-1 mt-3">
                                                {{#each contentPara}}
                                                <p class="mt-3">{{this}}</p>
                                                {{/each}}
                                        </div>
                                        <div id="action" class="d-flex justify-content-around align-items-center mt-4">
                                                <a href="./reject" class="btn btn-danger text-uppercase p-2"
                                                        id="button-reject" data-bs-toggle="modal"
                                                        data-bs-target="#reject-modal">
                                                        <i class="fa-regular fa-circle-xmark pe-2 fa-sm"></i>
                                                        Từ chối
                                                </a>
                                                <a href="./accept" class="btn btn-success text-uppercase p-2"
                                                        id="button-accept" data-bs-toggle="modal"
                                                        data-bs-target="#accept-modal">
                                                        <i class="fa-regular fa-circle-check pe-2 fa-sm"></i>
                                                        Duyệt
                                                </a>
                                        </div>
                                </div>
                                {{/with}}

                                <div class="content-2 content-hidden">
                                        <div class="d-flex justify-content-center">
                                                <div
                                                        class="col-lg-10 border rounded d-flex flex-column justify-content-center align-items-center">
                                                        {{#with article}}
                                                        <ul class="row col-lg-11 d-flex justify-content-around"
                                                                id="list-category">
                                                                {{#each Categories}}
                                                                <li
                                                                        class="item-child col-lg-5 d-flex justify-content-between align-items-center rounded p-2 mt-5">
                                                                        <p class="ms-2">{{name}}</p>
                                                                        <i class="fa-solid fa-trash me-2"
                                                                                style="cursor: pointer"
                                                                                onclick="removeCategory({{../id}}, {{id}}, {{../Categories.length}})"></i>
                                                                </li>
                                                                {{/each}}
                                                        </ul>
                                                        {{/with}}
                                                        <div class="col-4 align-self-end dropdown m-5">
                                                                <button class="btn btn-danger dropdown-toggle"
                                                                        type="button" data-bs-toggle="dropdown"
                                                                        aria-expanded="false">
                                                                        Thêm chuyên mục
                                                                </button>
                                                                <div class="dropdown-menu" id="menu-category">
                                                                        {{#each categoriesForEditor}}
                                                                        <p class="dropdown-item" style="cursor: pointer"
                                                                                onclick="updateCategory({{idArticle}}, {{id}})">
                                                                                {{name}}</p>
                                                                        {{/each}}
                                                                </div>
                                                        </div>
                                                </div>
                                        </div>
                                </div>

                                <div class="content-3 content-hidden">
                                        <div class="d-flex justify-content-center">
                                                <div
                                                        class="col-lg-10 border rounded d-flex flex-column justify-content-center align-items-center">
                                                        {{#with article}}
                                                        <ul class="row col-lg-11 d-flex justify-content-around"
                                                                id="list-tag">
                                                                {{#each Tags}}
                                                                <li
                                                                        class="item-child col-lg-5 d-flex justify-content-between align-items-center rounded p-2 mt-5">
                                                                        <p class="ms-2">{{name}}</p>
                                                                        <i class="fa-solid fa-trash me-2"
                                                                                style="cursor: pointer"
                                                                                onclick="removeTag({{../id}}, {{id}}, {{../Tags.length}})"></i>
                                                                </li>
                                                                {{/each}}
                                                        </ul>
                                                        {{/with}}
                                                        <div class="col-4 align-self-end dropdown m-5">
                                                                <button class="btn btn-danger dropdown-toggle"
                                                                        type="button" data-bs-toggle="dropdown"
                                                                        aria-expanded="false">
                                                                        Thêm thẻ
                                                                </button>
                                                                <div class="dropdown-menu" id="menu-tag">
                                                                        {{#each tagsForEditor}}
                                                                        <p class="dropdown-item" style="cursor: pointer"
                                                                                onclick="updateTag({{idArticle}}, {{id}})">
                                                                                {{name}}</p>
                                                                        {{/each}}
                                                                </div>
                                                        </div>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>

        </div>
</main>
<div class="modal fade" id="reject-modal" tabindex="-1" aria-labelledby="reject-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                        <div class="modal-header d-flex just justify-content-center">
                                <h5 class="modal-title" id="reject-modal-label">Lý do từ chối bài viết</h5>
                        </div>
                        <div class="modal-body">
                                <form class="d-flex flex-column justify-content-around align-items-center"
                                        action="./detail.html">
                                        <textarea class="col-10 form-control mb-3" name="" id="" type="text"
                                                placeholder="Ghi chú rõ lý do từ chối để phóng viên có thể hiệu chỉnh lại bài vết cho phù hợp"
                                                rows="10" required></textarea>
                                        <button type="submit" class="btn btn-danger col-4">TỪ CHỐI</button>
                                </form>
                        </div>
                </div>
        </div>
</div>
<div class="modal fade" id="accept-modal" tabindex="-1" aria-labelledby="accept-modal-label" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                        <div class="modal-header d-flex justify-content-center">
                                <h5 class="modal-title text-center" id="accept-modal-label">Xác định thời điểm
                                        đăng bài viết lên hệ thống</h5>
                        </div>
                        <div class="modal-body">
                                <form class="d-flex flex-column justify-content-around align-items-center"
                                        action="./detail.html">
                                        <ul class="row mb-3 d-flex flex-direction-column justify-content-around">
                                                <li class="mb-3 col-6">
                                                        <label for="accept-hour" class="col-form-label">Giờ</label>
                                                        <select class="form-select form-select-sm"
                                                                aria-label=".form-select-sm example" id="accept-hour"
                                                                required>
                                                                <option selected disabled value="">Chọn giờ
                                                                </option>
                                                        </select>
                                                </li>
                                                <li class="mb-3 col-6">
                                                        <label for="accept-minute" class="col-form-label">Phút</label>
                                                        <select class="form-select form-select-sm"
                                                                aria-label=".form-select-sm example" id="accept-minute"
                                                                required>
                                                                <option selected disabled value="">Chọn phút
                                                                </option>
                                                        </select>
                                                </li>
                                                <li class="mb-3">
                                                        <label for="accept-day" class="col-form-label">Ngày</label>
                                                        <select class="form-select form-select-sm"
                                                                aria-label=".form-select-sm example" id="accept-day"
                                                                required>
                                                                <option selected disabled value="">Chọn ngày
                                                                </option>
                                                        </select>
                                                </li>
                                                <li class="mb-3">
                                                        <label for="accept-month" class="col-form-label">Tháng</label>
                                                        <select class="form-select form-select-sm"
                                                                aria-label=".form-select-sm example" id="accept-month"
                                                                required>
                                                                <option selected disabled value="">Chọn tháng
                                                                </option>
                                                        </select>
                                                </li>
                                                <li class="mb-3">
                                                        <label for="accept-year" class="col-form-label">Năm</label>
                                                        <select class="form-select form-select-sm"
                                                                aria-label=".form-select-sm example" id="accept-year"
                                                                required>
                                                                <option selected disabled value="">Chọn năm
                                                                </option>
                                                        </select>
                                                </li>
                                        </ul>
                                        <button type="submit" class="btn btn-success col-4">DUYỆT</button>
                                </form>
                        </div>
                </div>
        </div>
</div>
{{!-- STYLES --}}

<link rel="stylesheet" href="/styles/base.css">
<link rel="stylesheet" href="/styles/authentication.css">
<link rel="stylesheet" href="/styles/browsingDetail.css">
{{!-- SCRIPTS --}}

<script src="/scripts/browsingDetail.js"></script>