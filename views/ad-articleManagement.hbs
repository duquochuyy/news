<!-- Edit Modal HTML -->
<div id="editModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i
                    class="fa-solid fa-xmark close-modal"></i></button>
            <form>

                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Thêm chuyên mục</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-info" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>
<!-- PUBLISH Modal -->
<div id="publishModal" class="myModal">

    <div class="myModal-content">


        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i
                class="fa-solid fa-xmark close-modal"></i></button>

        <p class="modal-title">Bạn có muốn xuất bản bài viết đã chọn?</p>

        <div class="myModal-button">
            <button id="publish-btn" class="button success-btn text-uppercase">Xuất bản</button>
            <button data-dismiss="modal" class="button cancel-btn text-uppercase">Hủy bỏ</button>

        </div>

    </div>

</div>
<!-- Delete Modal HTML -->
<div id="deleteModal" class="myModal">
    <div class="myModal-content">
        <button type="button" class="close"><i class="fa-solid fa-xmark close-modal"></i></button>

        <p class="modal-title">Xóa bài viết</p>

        <div class="form-group ">
            <textarea type="text" class="form-control input-field required" placeholder="Nhập lý do xóa..."></textarea>
            <div class="invalid-feedback">Vui lòng ghi rõ lý do xóa!</div>


        </div>
        <div class="myModal-button">
            <button class="button remove-btn text-uppercase submit">Xóa</button>
            <button class="button cancel-btn text-uppercase">Hủy
                bỏ</button>

        </div>

    </div>

</div>

