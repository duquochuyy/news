<main id="app__body">
    <div id="slider">
        <p class="category-card text-uppercase">nổi bật</p>
        {{#each mostArticle}}
        <div class="my-slide">
            <a href="/articles">
                <img src="{{mainImg}}">
                <div class="slider__caption">
                    <p>{{abstract}}</p>
                </div>
            </a>
        </div>
        {{/each}}
        <i class="control fa-solid fa-chevron-left"></i>
        <i class=" control fa-solid fa-chevron-right"></i>

    </div>
    <div id="new">
        <header class="heading-title text-uppercase">Mới nhất

            <a href="./listArticle" class="heading-title__link">Xem thêm +</a>
        </header>
        <div class="row">
            {{#each newestArticle}}
            <div class="col-md-6 ">
                <a href="/articles" class="new-article square pos-r">
                    <img src="{{mainImg}}" alt="{{title}}" class="new-article__img ">
                    <div class="new__infor">
                        <div class="w-100">
                            <div class="category-card">{{Category.name}}</div>
                            <p class="new-article__title font-title text-white">
                                {{title}} </p>
                            <div class="new-article__extra d-flex justify-content-between">
                                <p class="author "><i class="fa-solid fa-pen "></i>
                                    {{Writer}}</p>
                                <p class="time "><i class="fa-solid fa-clock"></i>
                                    {{createdAt}}</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            {{/each}}
        </div>

    </div>
